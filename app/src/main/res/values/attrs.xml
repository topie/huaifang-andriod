        <attr name="aspectRatio" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="roundedCornersRadius" format="dimension" />
        <attr name="roundedAsCircle" format="boolean" />
        <attr name="defImageRes" format="reference" />
