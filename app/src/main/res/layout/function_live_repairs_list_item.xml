<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.topie.huaifang.imageloader.HFImageView
        android:id="@+id/iv_fun_live_repairs_head"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_facing_index_friend_head"
        app:defImageRes="@mipmap/ic_facing_index_friend_head"
        app:roundedAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_fun_live_repairs_head"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_fun_live_repairs_head"
        android:layout_toRightOf="@id/iv_fun_live_repairs_head"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fun_live_repairs_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/colorDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_fun_live_repairs_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/colorLightGreen2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fun_live_repairs_head"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/iv_fun_live_repairs_head"
        android:layout_toRightOf="@id/iv_fun_live_repairs_head"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text="报修时间："
            android:textColor="@color/colorDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_fun_live_repairs_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/colorDark"
            android:textSize="14sp" />
    </LinearLayout>

    <include
        layout="@layout/function_line_item"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_fun_live_repairs_head" />
</RelativeLayout>