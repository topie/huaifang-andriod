<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.topie.huaifang.imageloader.HFImageView
            android:id="@+id/iv_fun_live_repairs_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_facing_index_friend_head"
            app:defImageRes="@mipmap/ic_facing_index_friend_head"
            app:roundedAsCircle="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_fun_live_repairs_head"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_fun_live_repairs_head"
            android:layout_toRightOf="@id/iv_fun_live_repairs_head"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fun_live_repairs_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fun_live_repairs_new_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorLightGreen2"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_fun_live_repairs_head"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/iv_fun_live_repairs_head"
            android:layout_toRightOf="@id/iv_fun_live_repairs_head"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fun_live_repairs_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />
        </LinearLayout>

        <include
            layout="@layout/function_line_item"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/iv_fun_live_repairs_head" />

        <LinearLayout
            android:id="@+id/ll_fun_live_repairs_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_fun_live_repairs_head"
            android:orientation="vertical">
            <!--房间号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:text="房间号"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fun_live_repairs_room"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--联系人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:text="联系人"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fun_live_repairs_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

            </LinearLayout>

            <!--联系电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:text="联系电话"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fun_live_repairs_tel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--维修时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:text="维修时间"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fun_live_repairs_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--报修事项-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:text="报修事项"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fun_live_repairs_detail_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--详细报修内容-->
            <TextView
                android:id="@+id/tv_fun_live_repairs_apply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <!--图片-->
            <LinearLayout
                android:id="@+id/ll_fun_live_repairs_apply_select_img"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:text="场景图片"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_fun_live_repairs_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <include layout="@layout/function_thick_line_item" />

            <LinearLayout
                android:id="@+id/ll_fun_live_repairs_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>