<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.topie.huaifang.MainActivity">

    <FrameLayout
        android:id="@+id/fl_index_frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#b3b3b3"
        android:weightSum="4">

        <include
            android:id="@+id/ll_index_bottom_tab_1"
            layout="@layout/index_main_tab_item" />

        <include
            android:id="@+id/ll_index_bottom_tab_2"
            layout="@layout/index_main_tab_item" />

        <include
            android:id="@+id/ll_index_bottom_tab_3"
            layout="@layout/index_main_tab_item" />

        <include
            android:id="@+id/ll_index_bottom_tab_4"
            layout="@layout/index_main_tab_item" />
    </LinearLayout>

</LinearLayout>
