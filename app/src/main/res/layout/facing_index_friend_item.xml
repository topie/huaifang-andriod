<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    tools:showIn="@layout/facing_index_fragment">

    <com.topie.huaifang.imageloader.HFImageView
        android:id="@+id/iv_facing_friend_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_facing_index_friend_head"
        app:borderColor="@color/colorLightGray"
        app:borderWidth="0.5dp"
        app:defImageRes="@mipmap/ic_facing_index_friend_head"
        app:roundedAsCircle="true" />

    <TextView
        android:id="@+id/tv_facing_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_facing_friend_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_light_green"
        android:minWidth="65dp"
        android:padding="5dp"
        android:text="@string/facing_index_friend_add"
        android:textColor="@color/colorLightGreen" />
</LinearLayout>