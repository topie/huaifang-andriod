<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/function_thick_line_item" />
        <!--房间号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="70dp"
                android:text="房间号"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_fun_live_repairs_apply_room"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_default_forward"
                android:visibility="invisible" />
        </LinearLayout>

        <include layout="@layout/function_line_item" />

        <!--联系电话-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="70dp"
                android:text="联系电话"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_fun_live_repairs_apply_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_default_forward"
                android:visibility="invisible" />
        </LinearLayout>

        <include layout="@layout/function_line_item" />

        <!--联系人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="70dp"
                android:text="联系人"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_fun_live_repairs_apply_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_default_forward"
                android:visibility="invisible" />
        </LinearLayout>

        <include layout="@layout/function_line_item" />

        <!--维修时间-->
        <LinearLayout
            android:id="@+id/ll_fun_live_repairs_apply_time"
            style="@style/item_selected_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="70dp"
                android:text="维修时间"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fun_live_repairs_apply_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请选择物业上门维修时间"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_default_forward" />
        </LinearLayout>

        <include layout="@layout/function_line_item" />

        <!--报修事项-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="70dp"
                android:text="报修事项"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_fun_live_repairs_apply_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写报修事项"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_default_forward"
                android:visibility="invisible" />
        </LinearLayout>

        <include layout="@layout/function_line_item" />
        <!--详细报修内容-->
        <EditText
            android:id="@+id/et_fun_live_repairs_apply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请填写详细报修内容"
            android:lines="6"
            android:scrollbars="vertical"
            android:textColor="@color/colorDark"
            android:textSize="14sp" />

        <include layout="@layout/function_line_item" />

        <!--上传图片-->
        <LinearLayout
            android:id="@+id/ll_fun_live_repairs_apply_select_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="70dp"
                android:text="拍照上传"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_fun_live_repairs_apply_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_default_forward"
                android:visibility="visible" />
        </LinearLayout>

        <include layout="@layout/function_line_item" />

        <LinearLayout
            android:id="@+id/ll_fun_live_repairs_apply_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fun_live_repairs_apply_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fun_party_act_publish"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/default_submit"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>