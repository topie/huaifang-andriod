<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topie.huaifang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:name=".HFApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".facing.HFMainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.HFLoginActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".function.guide.HFFunGuideActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".function.live.HFFunLiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".function.notice.HFFunPublicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".communication.HFCommFriendsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".function.party.HFFunPartyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".function.yellowpage.HFFunYellowPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HFGetPictureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HFTransparent" />
        <activity
            android:name=".function.HFFunAllActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".function.library.HFFunLibraryActivity" />
        <activity android:name=".function.other.HFQuestionActivity" />
        <activity android:name=".function.dispute.HFFunDisputeMediatorActivity" />
        <activity android:name=".function.party.HFFunPartyActDetailActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.topie.huaifang.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>