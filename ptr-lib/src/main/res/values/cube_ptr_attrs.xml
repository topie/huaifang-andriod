<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LmPtrFrameLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="lm_ptr_header" format="reference"/>
        <attr name="lm_ptr_content" format="reference"/>
        <attr name="lm_ptr_footer" format="reference"/>

        <!-- the resistance when you are moving the frame -->
        <attr name="lm_ptr_resistance" format="float"/>
        <attr name="lm_ptr_resistance_header" format="float"/>
        <attr name="lm_ptr_resistance_footer" format="float"/>

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="lm_ptr_ratio_of_header_height_to_refresh" format="float"/>

        <attr name="lm_ptr_duration_to_back_refresh" format="integer"/>
        <attr name="lm_ptr_duration_to_back_header" format="integer"/>
        <attr name="lm_ptr_duration_to_back_footer" format="integer"/>

        <attr name="lm_ptr_duration_to_close_either" format="integer"/>
        <attr name="lm_ptr_duration_to_close_header" format="integer"/>
        <attr name="lm_ptr_duration_to_close_footer" format="integer"/>

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="lm_ptr_pull_to_fresh" format="boolean"/>

        <!-- keep header when refreshing-->
        <attr name="lm_ptr_keep_header_when_refresh" format="boolean"/>
        <attr name="lm_ptr_mode" format="enum">
            <enum name="none" value="0"/>
            <enum name="refresh" value="1"/>
            <enum name="loadMore" value="2"/>
            <enum name="both" value="3"/>
        </attr>
    </declare-styleable>
</resources>